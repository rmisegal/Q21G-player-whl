# Q21 Player SDK Environment Configuration
# Copy this file to .env and fill in your values
# IMPORTANT: .env should NEVER be committed to version control

# =============================================================================
# Gmail API Configuration
# =============================================================================

# Path to OAuth2 credentials JSON file (downloaded from Google Cloud Console)
GMAIL_CREDENTIALS_PATH=client_secret.json

# Path to store OAuth2 token (auto-generated after first authentication)
GMAIL_TOKEN_PATH=token.json

# Gmail account used by the player (set automatically by setup.py)
GMAIL_ACCOUNT=your.email@gmail.com

# =============================================================================
# Database Configuration
# =============================================================================

# PostgreSQL connection settings
GTAI_DB_HOST=localhost
GTAI_DB_PORT=5432
GTAI_DB_NAME=gtai_player
GTAI_DB_USER=postgres
GTAI_DB_PASSWORD=your_password_here

# =============================================================================
# Application Settings
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
# Set to WARNING to only see sent/received emails (no verbose INFO logs)
LOG_LEVEL=WARNING

# Polling interval in seconds (for watch mode)
POLL_INTERVAL_SEC=30

# Demo mode - set to true to use DemoAI instead of your PlayerAI
DEMO_MODE=false

# =============================================================================
# LLM Configuration (Optional - for LLM-based strategies)
# =============================================================================

# LLM communication method: cli, api, or mock
# LLM_METHOD=cli

# Default LLM agent to use
# LLM_DEFAULT_AGENT=CLAUDE_STRATEGY

# Request timeout in seconds
# LLM_TIMEOUT_SEC=120

# Maximum retry attempts
# LLM_MAX_RETRIES=3

# Enable fallback chain
# LLM_FALLBACK_ENABLED=true

# API Keys (only needed if LLM_METHOD=api)
# ANTHROPIC_API_KEY=sk-ant-your-key-here
# OPENAI_API_KEY=sk-your-key-here
